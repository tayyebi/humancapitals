        <Image x:FieldModifier="public" x:Name="imgBack" HorizontalAlignment="Left" Height="9cm" VerticalAlignment="Top" Width="12cm" Margin="0cm,12cm,0,0" Stretch="UniformToFill" RenderTransformOrigin="0.5,0.5" />

