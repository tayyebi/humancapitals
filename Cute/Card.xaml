        <Line X1="9cm" Y1="3cm" X2="9cm" Y2="12cm" Stroke="Black" StrokeThickness="1" StrokeDashArray="6 8" />

        <Label x:Name="label_Copy" Content="www.gordarg.com" HorizontalAlignment="Left" Margin="40,342,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
